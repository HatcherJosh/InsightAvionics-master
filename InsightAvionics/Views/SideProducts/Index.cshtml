@model IEnumerable<InsightAvionics.Models.SideProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SideName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SideShort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SideImage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SideBody)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SideName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SideShort)
        </td>
        <td>
            <img src="/SideProducts/RetrieveImage/@item.SideID" alt="" height=100 width=200 />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SideBody)
        </td>
        @if (User.Identity.IsAuthenticated)
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SideID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SideID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.SideID })
            </td>
        }
    </tr>
}

</table>
